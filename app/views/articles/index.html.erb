<div class="left-content">
</div>
<div class="container">
  <div class="right-content">
    <div class="columns is-multiline is-mobile">
  <% @articles.each do | article| %>
     <div class="column is-half">
       <p class="user__name">
       <%= article.id %>
       </p>
    <div class="card">
      <div class="card-image">
        <figure class="image is-4by3">
          <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
        </figure>
      </div>
      <header class="card-header">
        <p class="card-header-title">
          <%= article.title %>
        <p/>
        <p class="time"><%= article.created_at.strftime("%m/%d %H:%M")%></p>
      </header>
      <footer class="card-footer">
        <a href="#" class="card-footer-item">Deteil</a>
        <%= link_to "Edit","/articles/#{article.id}/edit", class:"card-footer-item" %>
        <%= link_to "Delete","/articles/#{article.id}", method: :delete, class:"card-footer-item" %>
      </footer>
    </div>
     </div>
  <% end %>
    </div>
    <%= paginate(@articles) %>
  </div>
</div>