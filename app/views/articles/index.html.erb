<div class="container">
  <div class="right-content">
    <div class="columns is-multiline">
  <% @articles.each do | article| %>
     <div class="column is-4">
    <div class="card">
      <p class="card-header-author">
        <%= "投稿者:#{article.user.name}" %>
      </p>
      <div class="card-image">
        <figure class="image is-5by3">
          <%if article.image? %>
            <%= image_tag article.image.to_s %>
          <%else%>
          <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
          <% end %>
        </figure>
      </div>
      <header class="card-header">
        <p class="card-header-title">
          <%= article.title %>
        <p/>
        <p class="time">
          <%= article.created_at.strftime("%m/%d %H:%M")%>
        </p>
      </header>
      <footer class="card-footer">
        <%= link_to "Detail","/articles/#{article.id}", class:"card-footer-item" %>
        <%= link_to "Edit","/articles/#{article.id}/edit", class:"card-footer-item" %>
        <%= link_to "Delete","/articles/#{article.id}", method: :delete, class:"card-footer-item" %>
      </footer>
    </div>
     </div>
  <% end %>
    </div>
  <%= paginate(@articles) %>
  </div>
</div>